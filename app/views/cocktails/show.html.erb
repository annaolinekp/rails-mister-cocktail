<div class="container">
  <div class="row">
    <div>
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Back to all cocktails", root_path %>
    </div>
  </div>
  <div class="row">
    <div>
      <h3>Recipe</h3>
      <table>
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
              <td><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

